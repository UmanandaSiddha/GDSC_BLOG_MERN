{
    "compilerOptions": {
        "target": "ES2023",
        "module": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}